<div class="registration panel panel-default" ng-controller="RegistrationCtrl">
    <h3 class="text-center">Регистрация</h3>
    <form  role="form" class="form-horizontal form-group panel-body" >
        <table >
            <tr>
                <td ><label for="name" > Имя</label></td>
                <td>
                    <input type="text" id="name" class="form-control" ng-model="Registration.name"/>
                </td>
            </tr>
            <tr>
                <td><label for="surname">Фамилия</label></td>
                <td>
                    <input type="text" id="surname" class="form-control" ng-model="Registration.surname"/>
                </td>
            </tr>
            <tr>
                <td><label for="course">Курс</label></td>
                <td>
                    <select class="form-control" id="course" ng-options="c.name for c in courses" ng-model="Registration.course"></select>
                </td>
            </tr>
            <tr>
                <td><label for="group">Группа</label></td>
                <td>
                    <input id="group" type="text" class="form-control" ng-model="Registration.group"/>
                </td>
            </tr>
            <tr>
                <td><label for="email">Email</label></td>
                <td>
                    <input id="email" type="email" class="form-control" ng-model="Registration.email"/>
                </td>
            </tr>
            <tr>
                <td><label for="password">Пароль</label></td>
                <td>
                    <input id="password" type="password" class="form-control" ng-model="Registration.password"/>
                </td>
            </tr>
            <tr>
                <td><label for="confirmpassword">Подтверждение пароля</label> </td>
                <td>
                    <input id="confirmpassword" type="password" class="form-control" ng-model="Registration.confirmPassword"/>
                </td>
            </tr>
            <tr>
                <td></td>
                <td><button class="btn btn-lg btn-primary btn-block" type="submit" ng-click="signUp()">Зарегистрироваться</button></td>
            </tr>
        </table>

    </form>

</div>