<!DOCTYPE html>
<html ng-app="app">
<head>
  <title>SeaBattle</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body ng-controller="AppCtrl">
<% if current_user %>
<div class="header">
    <div class="container-fluid">
        <ul class="nav nav-pills pull-right btn-sm">
            <li><a href="/games/new">New game</a></li>
            <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
        </ul>
        <p class="navbar-text pull-right">Your stats:  <%= "#{current_user.winned_games.size} wins / #{current_user.games.size} games" %></p>
    </div>
</div>
<% else %>
<div class="header">
    <div class="container-fluid">
        <ul class="nav nav-pills pull-right btn-sm">
            <li><a href="/users/sign_up">Registration</a></li>
            <li><a href="/users/sign_in">Sign in</a></li>
        </ul>
    </div>
</div>
<% end %>

  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

  <p class="alert"></p>
  <p class="notice"></p>

  <div class="main col-md-12">
            <%= yield %>
  </div>

</body>
</html>
