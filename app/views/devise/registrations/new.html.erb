<div class="registration panel panel-default">
    <h3 class="text-center">Sign Up</h3>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, class:"text-right" %><br />
  <%= f.email_field :email, autofocus: true, class:"form-control"%></div>

  <div><%= f.label :password, class:"text-right"  %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control"%></div>

  <div><%= f.label :password_confirmation, class:"text-right"  %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %></div>

  <div><%= f.submit "Sign up", class:"btn btn-primary"  %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>